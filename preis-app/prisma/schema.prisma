datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  isAdmin       Boolean   @default(false)
  isCompany     Boolean   @default(false)
  sessions      Session[]
  items         Item[]
  wallet        Wallet?
}

model Wallet {
  id         Int    @id @default(autoincrement())
  publicKey  String
  privateKey String
  mnemonic   String
  userId     Int    @unique
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Item {
  id     Int     @id @default(autoincrement())
  userId Int
  name   String?
  image  String?
  price  String?
  amount String?
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
