datasource db {
  // provider = "sqlite"
  // url      = "file:dev.db"
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  isAdmin       Boolean   @default(false)
  isCompany     Boolean   @default(false)
  sessions      Session[]
  items         Item[]
  wallet        Wallet?
}

model Wallet {
  id         Int    @id @default(autoincrement())
  publicKey  String
  privateKey String
  mnemonic   String
  userId     Int    @unique
  user       User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Item {
  id          Int       @id @default(autoincrement())
  userId      Int
  title       String?
  imagePath   String?
  price       Int?
  quantity    Int?
  isPublished Boolean   @default(false)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  lottery     Lottery[]
}

model Lottery {
  id           Int      @id @default(autoincrement())
  itemId       Int
  participants String[]
  item         Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
